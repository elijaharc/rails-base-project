<h1>Buyer Portfolio</h1>
<% if @bought_stocks.empty? %>
    <p>You have not bought any stocks yet.</p>
<% else %>
    <table>
        <thead>
            <tr>
            <th>Ticker</th>
            <th>Name</th>
            <th>Last Price</th>
            <th>Broker</th>
            <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% @bought_stocks.each do |stock| %>
            <tr>
                <td><%= stock.ticker %></td>
                <td><%= stock.name %></td>
                <td><%= stock.last_price %></td>
                <td><%= stock.added_by %></td>
                <%# <td><%= link_to "Delete", broker_stock_path(stock), method: :delete, data: { confirm: "Are you sure?"} %>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<%= link_to "Back", buyer_index_path %>