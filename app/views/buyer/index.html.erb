<h1>Buyer Landing Page</h1>

<% if @all_stocks.empty? %>
    <p>There are no stocks available.</p>
<% else %>
    <h1>All stocks</h1>
    <table>
        <thead>
            <tr>
            <th>Ticker</th>
            <th>Name</th>
            <th>Last Price</th>
            <th>Broker</th>
            <th>Action</th>
            </tr>
        </thead>

        <tbody>
            <% @all_stocks.each do |stock| %>
            <tr>
                <td><%= stock.ticker %></td>
                <td><%= stock.name %></td>
                <td>$<%= stock.last_price %></td>
                <td><%= stock.brokers.first.broker_name %></td>

                <%# <td><%= link_to 'Buy', buyer_stock_path(stock)</td> %>
                <td><%= link_to 'Buy Stock', buyer_stock_path(stock, broker_id: stock.added_by, stock_id: stock.id), method: :get, class: "btn btn-dark" %></span></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<h3><%= link_to "Buyer Portfolio", buyer_portfolio_path %></h3>