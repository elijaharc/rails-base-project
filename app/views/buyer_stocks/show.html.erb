
<div class="container mt-4">
 
  <div class="row mb-3">
    <div class="col-lg-6 col-md-12 col-sm-12">
        <h1 class="text-success">Buy Stock</h1>
        <p class="text-primary lead">From Broker: <%= @broker_stock.brokers.first.broker_name %><br> Email: <%= @broker_stock.brokers.first.email %></p>
        <div class="card bg-success text-white neumorphic mx-auto" style="width: auto;">
        <%= form_for @broker_stock, url: :buyer_stocks, class: "form-signin", method: :post do |f| %>
        <div class="card-body border border-light rounded animate__animated animate__fadeIn">
            <%= f.hidden_field :broker_id, :value => @broker %>
            <%= f.hidden_field :broker_id, :value => @broker %>
            <%= f.hidden_field :stock_id, :value => params[:stock_id] %>
            <table>
              <tbody>
                <tr>
                  <th><h2 class="card-title">Ticker:</h2</th>
                  <td><h2 class="card-title"><%= @broker_stock.ticker %></h2></td>
                </tr>
                <tr>
                  <th><h5 class="card-title">Name:</h5></th>
                  <td><h5 class="card-title"><%= @broker_stock.name %></h5></td>
                </tr>
                <tr>
                  <th><h5 class="card-text"><%= f.label :last_price %></h5</th>
                  <td><h5 class="card-text">$<%= @broker_stock.last_price %></h5></td>
                </tr>
                <tr>
                  <th><h5 class="card-text"><%= f.label :quantity %></h5></th>
                  <td><h5 class="card-text"><%= f.number_field :quantity, min: 1, class: "form-control" %></h5></td>
                </tr>
              </tbody>
            </table>

            <div class="card-footer text-center animate__animated animate__fadeIn">
                <%= f.submit "Buy Stock", class: "btn btn-lg btn-primary" %>
            </div>
        </div>
        <% end %>
        </div>
        <br/>
        <%= link_to "Back", buyer_index_path, class: "btn btn-secondary" %>
    </div>
    
    <div class="col-lg-6 col-md-12 col-sm-12 p-1">

    </div>

  </div>
</div>