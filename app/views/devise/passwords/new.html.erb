
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-sm-12 mt-5">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-signin") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
      <%= f.button "Send me reset password instructions", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-lg btn-primary btn-block mt-3 mb-3" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-lg-6 col-sm-12 p-5">
      <%= image_tag ('forgotpassword.svg') %>
    </div>
  </div>
</div>

