


<div class="container">
  <div class="row">
    <div class="col-lg-6 col-sm-12 mt-5">
      <h2>Resend unlock instructions</h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), class: "form-signin", html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.button "Resend unlock instructions", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-lg btn-primary btn-block mt-3 mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-lg-6 col-sm-12 p-5">
      <%= image_tag ('unlock.svg') %>
    </div>
  </div>
</div>

