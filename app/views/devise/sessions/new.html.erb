
      <% if resource.account_type == "admin" %>
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-sm-12 mb-3">
         <%= image_tag ('admin.svg') %>
      <% elsif resource.account_type == "buyer" %>
      <div class="container text-success">
        <div class="row">
          <div class="col-lg-6 col-sm-12 mb-3">
        <%= image_tag ('buyer.svg') %>
      <% elsif resource.account_type == "broker" %>
      <div class="container text-primary">
        <div class="row">
          <div class="col-lg-6 col-sm-12 mb-3">
        <%= image_tag ('broker.svg') %>
      <% end %>
      </div>
      <div class="col-lg-6 col-sm-12 p-5">
        <h2>Sign in as <%= resource_name.capitalize %></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin" ) do |f| %>
        <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="actions">
          <% if resource.account_type == "buyer" %>
            <%= f.button "Sign in", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-lg btn-success btn-block mt-3" %>
          <% elsif resource.account_type == "broker" %>
            <%= f.button "Sign in", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-lg btn-primary btn-block mt-3" %>
          <% else %>
            <%= f.button "Sign in", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-lg btn-secondary btn-block mt-3" %>
          <% end %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <% if resource.account_type != "admin" %>
        <%= link_to "Sign in as Admin", new_admin_session_path, class: "text-secondary" %>
        <% end %>
      </div>
  </div>
</div>
