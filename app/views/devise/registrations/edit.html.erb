<% if buyer_signed_in? %>
<div class="container text-success">
<% elsif broker_signed_in? %>
<div class="container text-primary">
<% end %>
  <div class="row">
      <div class="col-lg-6 col-sm-12 mb-5">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin", html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <% if resource.account_type == "broker" %>  
              <div class="field">
                <%= f.label :broker_name %><br />
                <%= f.text_field :broker_name, autofocus: true, autocomplete: "broker name", class: "form-control" %>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Update", class: "btn btn-lg btn-secondary mt-3" %>
            </div>
          <% end %>

      </div>
      <div class="col-lg-6 col-sm-12 p-5 text-center">
          <%= image_tag ('account.svg'), style: "min-width: 30%; width: 50%;", class: "img-fluid" %>
          <h3>Cancel my account</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger mt-3", data: { confirm: "Are you sure?" }, method: :delete %></p>

          <%= link_to "Back", root_path, class: "btn btn-sm btn-secondary" %>
      </div>
  </div>
</div>
