<div class="container mt-4">
 
  <div class="row mb-3">
    <div class="col-lg-6 col-md-6 col-sm-12 mb-2 px-5">
        <h1 class="text-primary">Search Stocks</h1>
        <%= form_tag search_stock_path, remote: true, method: :get, :class => "form-signin" do %>
        <%= text_field_tag :stock, params[:stock], placeholder: 'Enter Stock Ticker...', class: "form-control" %>
        <%= button_tag "Submit", id: "stock-search", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Searching..."}, class: "btn btn-lg btn-primary btn-block mt-3"%>
        <% end %>
        <div id='search_result' class="card bg-primary text-white neumorphic" style="width: 100%;">
          <%= render 'broker/search_result' %>
        </div>
    </div>
    
    <div class="col-lg-6 col-md-6 col-sm-12 p-1">
      <table class="table mt-3">
      <h3 class="text-primary">Top 10 Most Active Stocks</h3>
        <thead class="thead-dark">
          <tr>
          <th>Ticker</th>
          <th>Name</th>
          <th>Last Price</th>
          </tr>
        </thead>
        <tbody class="text-white" style="font-size: 16px;">
          <% @stocks_list.each do |stock| %>
          <tr>
            <td><%= stock.symbol %></td>
            <td><%= stock.company_name %></td>
            <td>$<%= stock.latest_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>