<% if notice %>
    <script>
      toastr.options = {
      "closeButton": true,
      "debug": false,
      "newestOnTop": false,
      "progressBar": true,
      "positionClass": "toast-top-right",
      "preventDuplicates": true,
      "onclick": null,
      "showDuration": "300",
      "hideDuration": "1000",
      "timeOut": "5000",
      "extendedTimeOut": "1000",
      "showEasing": "swing",
      "hideEasing": "linear",
      "showMethod": "fadeIn",
      "hideMethod": "fadeOut"
    }

    let noticeString = '<%= notice %>'

    if (noticeString.includes("blank")) {
      toastr.error('<%= notice %>');
    } else {
      toastr.success('<%= notice %>');
    }

    </script>

<% end %>

