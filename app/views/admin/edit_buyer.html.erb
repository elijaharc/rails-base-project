<div class="container text-success mt-2">
  <div class="row">
          
   <div class="col-lg-6 col-sm-12 mb-5">
        <h1>Edit Buyer <%= @buyer.email %></h1>

        <%= form_for @buyer, :url => {:action => "edit_buyer"}, class: "form-signin" do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
            <%= f.submit "Edit Buyer", class: "btn btn-lg btn-success btn-block mt-3" %>
        <% end %>

        <%= button_to "Back to Users", admin_users_path, {method: 'get', class: "btn btn-lg btn-secondary mt-5"} %>
   </div>
      
   <div class="col-lg-6 col-sm-12 p-5">
        <%= image_tag ('buyer.svg') %>
   </div>
  
  </div>
</div>