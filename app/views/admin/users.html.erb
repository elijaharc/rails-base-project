<div class="container">

 <div class="row justify-content-center">
   <div class="col-lg-12 col-md-12 col-sm-12 p-1">

    <div class="text-center">
      <div class="btn-group mb-2" role="group">
        <%= link_to "Create Broker Account", admin_new_broker_path, class: "btn btn-sm btn-primary  mr-1" %>
        <%= link_to "Create Buyer Account", admin_new_buyer_path, class: "btn btn-sm btn-success" %>
      </div>
      <h1 class="display-4">Showing All Registered Users</h1>
    </div>
  
  </div>
</div>

 <div class="row p-2 justify-content-center">
   <div class="col-lg-6 col-md-12 col-sm-12 p-2 justify-content-center text-center">
    <% if !@all_brokers.empty? %>
    <h1 class="text-primary">Brokers</h1>
    <%= button_to "Create Broker Account", admin_new_broker_path, {method: 'get', class: "btn btn-lg btn-primary"} %>
      <table class="table table-responsive-sm mt-3">
        <thead class="thead-dark text-white">
          <tr>
          <th>Broker ID</th>
          <th>Broker Name</th>
          <th>Broker Email</th>
          <th>View</th>
          <th>Edit</th>
          </tr>
        </thead>
        <tbody class="text-white">
          <% @all_brokers.each do |broker| %>
          <tr>
            <td class="font-weight-bold"><%= broker.id %></td>
            <td><%= broker.broker_name.truncate(15) %></td>
            <td><%= broker.email.truncate(15) %></td>
            <td><%= link_to '', show_broker_path(broker), method: :get, class: "fas fa-eye text-primary", style: "text-decoration: none;" %></td>
            <td><%= link_to '', edit_broker_path(broker), method: :get, class: "fas fa-edit text-primary", style: "text-decoration: none;" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>There are no registered Brokers yet.</p>
    <% end %>
  </div>

  <div class="col-lg-6 col-md-12 col-sm-12 p-2 justify-content-center text-center">
    <% if !@all_buyers.empty? %>
    <h1 class="text-success">Buyers</h1>
    <%= button_to "Create Buyer Account", admin_new_buyer_path, {method: 'get', class: "btn btn-lg btn-success"} %>
      <table class="table table-responsive-sm mt-3">
        <thead class="thead-dark text-white">
          <tr>
          <th>Buyer ID</th>
          <th>Buyer Email</th>
          <th>View</th>
          <th>Edit</th>
          </tr>
        </thead>
        <tbody class="text-white" style="font-size: 16px;">
          <% @all_buyers.each do |buyer| %>
          <tr>
            <td class="font-weight-bold"><%= buyer.id %></td>
            <td><%= buyer.email.truncate(15) %></td>
            <td><%= link_to '', show_buyer_path(buyer), method: :get, class: "fas fa-eye text-success", style: "text-decoration: none;" %></td>
            <td><%= link_to '', edit_buyer_path(buyer), method: :get, class: "fas fa-edit text-success", style: "text-decoration: none;" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>There are no registered buyers yet.</p>
    <% end %>
    </div>

  </div>
</div>
    
