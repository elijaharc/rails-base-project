<div class="container text-center w-100">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 mx-auto">
      <%= image_tag ('stockapp.svg'), style: "width: 100%; max-width: 300px; height: auto;" %>
    </div>
  </div>
  <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
        <h5 class="text-primary">Welcome Broker <%= current_broker.broker_name %>!</h5>
        <div class="btn-group mt-2" role="group">
            <%= link_to "Search Stocks", broker_index_path, class: "btn btn-sm btn-primary mr-1" %>
            <%= link_to "Broker Portfolio", broker_portfolio_path, class: "btn btn-sm btn-primary mr-1" %>
            <%= link_to "Broker Transactions", broker_transactions_path, class: "btn btn-sm btn-primary" %>
        </div>
        
        </div>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= image_tag ('broker.svg'), style: "width: 100%; max-width: 350px; height: auto;" %>
      </div>
  </div>
</div>