<div class="container text-center">
  <div class="row">
      <div class="col-lg-6 col-sm-12 p-4">
        <h1 class="text-success">Buyer</h1>
        <%= image_tag ('buyer.svg'), style: "width: 80%" %>
        <div class="btn-group" role="group">
        <%= link_to "Sign in as Buyer", new_buyer_session_path, class: "btn btn-lg btn-success mr-2" %>
        <%= link_to "Sign up as Buyer", new_buyer_registration_path, class: "btn btn-lg btn-success" %>
        </div>
      </div>
      <div class="col-lg-6 col-sm-12 p-4">
        <h1 class="text-primary">Broker</h1>
        <%= image_tag ('broker.svg'), style: "width: 80%" %>
        <div class="btn-group" role="group">
        <%= link_to "Sign in as Broker", new_broker_session_path, class: "btn btn-lg btn-primary mr-2" %>
        <%= link_to "Sign up as Broker", new_broker_registration_path, class: "btn btn-lg btn-primary" %>
        </div>
      </div>
  </div>

  <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <%= link_to "Log in as Admin", new_admin_session_path, class: "text-secondary" %>
      </div>
  </div>
</div>